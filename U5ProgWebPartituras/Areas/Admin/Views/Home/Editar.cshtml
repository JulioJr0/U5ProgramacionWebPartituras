@model U5ProgWebPartituras.Areas.Admin.Models.EditarAdminPartiturasViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Partitura - Repositorio</title>
    <link rel="stylesheet" href="~/scripts/Styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <header class="navbar">
        <div class="logo">
            <i class="fas fa-file-alt"></i>
            Repositorio de Partituras
        </div>
        <nav class="nav-links">
            <a href="@Url.Action("Index", "Home")" class="nav-link"><i class="fas fa-home"></i> Inicio</a>
            <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="nav-link active"><i class="fas fa-user-shield"></i> Administración</a>
        </nav>
    </header>

    <main class="content-page">

        <h1 class="main-title">Editar Partitura</h1>
        <p class="subtitle">Edita el formulario para modificar la partitura en el catálogo.</p>

        <section class="admin-panel">

            <form class="add-score-form" asp-action="Editar" asp-controller="Home" asp-area="Admin" method="post" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                    @Html.ValidationSummary()
                </div>
                <h2><i class="fas fa-info-circle"></i> Información de la Partitura</h2>

                <div class="form-group">
                    <label for="titulo">Título de la Partitura:</label>
                    <input type="text" asp-for="Titulo" placeholder="Ej: Sonata para Piano n.º 16 en Do Mayor (K. 545)">
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="compositor">Instrumentacion:</label>
                    <input type="text" asp-for="Instrumentacion" placeholder="Ej: Wolfgang Amadeus Mozart">
                    <span asp-validation-for="Instrumentacion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="descripcion">Descripción:</label>
                    <textarea asp-for="Descripcion" rows="4" placeholder="Breve descripción de la obra y su contexto."></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group select-group">
                        <label for="genero">Género (IdGenero)</label>
                        <select asp-for="IdGenero">
                            <option value="">Selecciona el Género</option>
                            @foreach (var item in Model.GenerosLista)
                            {
                                <option value="@item.Id">@item.Nombre</option>

                            }
                        </select>
                        <span asp-validation-for="IdGenero" class="text-danger"></span>
                    </div>

                    <div class="form-group select-group">
                        <label for="dificultad">Dificultad (Dificultad)</label>
                        <select asp-for="Dificultad">
                            <option value="" disabled selected>Selecciona la Dificultad</option>
                            <option value="Principiante">Principiante</option>
                            <option value="Fácil">Fácil</option>
                            <option value="Intermedio">Intermedio</option>
                            <option value="Avanzado">Avanzado</option>
                            <option value="Experto">Experto</option>
                        </select>
                        <span asp-validation-for="Dificultad" class="text-danger"></span>
                    </div>

                    <div class="form-group select-group">
                        <label for="instrumentacion">Compositor</label>
                        <select asp-for="IdCompositor">
                            <option disabled selected>Selecciona el Instrumento</option>
                            @foreach (var item in Model.CompositoresLista)
                            {
                                <option value="@item.Id">@item.Nombre</option>
                            }
                        </select>
                        <span asp-validation-for="IdCompositor" class="text-danger"></span>
                    </div>
                </div>

                <hr>

                <h2><i class="fas fa-upload"></i> Remplazo de Archivos</h2>
                <!-- Archivos (Reemplazo) -->

                <div class="form-group file-group">
                    <label for="file_pdf"><i class="fas fa-file-pdf"></i> Reemplazar Partitura (PDF/Img)</label>
                    <input asp-for="Pdf" type="file" accept=".pdf, .jpg, .jpeg">
                    <p class="file-note">Sube la partitura principal en formato PDF o JPEG.</p>
                    <span asp-validation-for="Pdf" class="text-danger"></span>
                </div>

                <div class="form-group file-group">
                    <label for="file_audio"><i class="fas fa-volume-up"></i> Reemplazar Audio</label>
                    <input asp-for="Audio" type="file" accept=".mp3, .wav">
                    <p class="file-note">Opcional: Sube un fragmento en MP3 o WAV.</p>
                    <span asp-validation-for="Audio" class="text-danger"></span>
                </div>

                <hr>

                <div class="form-actions">
                    <button type="submit" class="submit-btn"><i class="fas fa-check"></i> Guardar Partitura</button>
                    <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="back-btn"><i class="fas fa-arrow-left"></i> Volver a Administración</a>
                </div>

            </form>
        </section>
    </main>

</body>
</html>