@model U5ProgWebPartituras.Areas.Admin.Models.EliminarAdminPartiturasViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Eliminar Partitura";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white text-center">
                        <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación</h3>
                    </div>
                    <div class="card-body text-center p-5">
                        <h4 class="mb-3">¿Estás seguro que deseas eliminar esta partitura?</h4>

                        <div class="alert alert-light border">
                            <h2 class="text-danger fw-bold">@Model.Nombre</h2>
                        </div>

                        <p class="text-muted">
                            Esta acción eliminará permanentemente la partitura y sus archivos asociados (PDF y Audio) de la base de datos y del servidor.
                            <br><strong>¡Esta acción no se puede deshacer!</strong>
                        </p>

                        <form asp-action="Eliminar" asp-controller="Home" asp-area="Admin" method="post" class="mt-4">
                            <input type="hidden" asp-for="Id" />

                            <div class="d-flex justify-content-center gap-3">
                                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="fas fa-trash-alt"></i> Sí, Eliminar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
</body>
</html>