@model U5ProgWebPartituras.Areas.Admin.Models.EliminarAdminPartiturasViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Eliminar Partitura</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <div class="container py-5">
        <div class="row justify-content-center">

            <div class="col-md-7 col-lg-6">
                <div class="card shadow-lg border-2 border-danger">

                    <!-- Cabecera -->
                    <div class="card-header text-center bg-danger text-white py-3">
                        <h3 class="fw-bold mb-0">
                            <i class="fas fa-trash-alt me-2"></i>Eliminar Partitura
                        </h3>
                    </div>

                    <!-- Cuerpo principal -->
                    <div class="card-body text-center px-4 py-5">

                        <div class="alert alert-danger border-0 fw-bold fs-5 p-3 rounded-3">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            ¡Atención! Esta acción es irreversible.
                        </div>

                        <p class="text-muted mb-4">
                            Estás a punto de eliminar la siguiente partitura de forma permanente:
                        </p>

                        <div class="p-3 mb-4 rounded-3 border border-danger-subtle bg-white shadow-sm">
                            <h2 class="text-danger fw-bold mb-1">@Model.Nombre</h2>
                            <small class="text-secondary">ID: @Model.Id</small>
                        </div>

                        <p class="text-muted fst-italic">
                            Se eliminarán también los archivos PDF y audio almacenados en el servidor.
                            <br />
                            <strong class="text-danger">Esta acción no se puede deshacer.</strong>
                        </p>

                        <!-- Formulario -->
                        <form asp-action="Eliminar" asp-controller="Home" asp-area="Admin" method="post">
                            <input type="hidden" asp-for="Id" />

                            <div class="d-flex justify-content-center gap-4 mt-4">

                                <a asp-action="Index"
                                   class="btn btn-outline-secondary btn-lg px-4">
                                    Cancelar
                                </a>

                                <button type="submit"
                                        class="btn btn-danger btn-lg px-4 shadow-sm">
                                    <i class="fas fa-trash me-2"></i>Eliminar Definitivamente
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>

</body>
</html>
