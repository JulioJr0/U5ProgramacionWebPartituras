@model U5ProgWebPartituras.Areas.Admin.Models.IndexAdminPartiturasViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administración de Partituras - Repositorio</title>
    <link rel="stylesheet" href="~/scripts/Styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        .badge-expert {
            background-color: darkred;
            color: white;
        }
    </style>
</head>
<body>

    <header class="navbar">
        <div class="logo">
            <i class="fas fa-file-alt"></i>
            Repositorio de Partituras
        </div>
        <nav class="nav-links">
            <a href="Home/Index" class="nav-link"><i class="fas fa-home"></i> Inicio</a>
            <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="nav-link active"><i class="fas fa-user-shield"></i> Administración</a>
        </nav>
    </header>

    <main class="content-page">

        <h1 class="main-title">Administración de Partituras</h1>
        <p class="subtitle">Gestiona el catálogo completo de partituras musicales</p>

        <section class="admin-panel">

            <div class="admin-header">
                <h2>Catálogo de Partituras</h2>
                <p class="item-count"> 4 de 4 partituras</p>
                <a style="text-decoration:none" href="@Url.Action("Agregar", "Home", new { area = "Admin" })" class="add-score-btn"><i class="fas fa-plus"></i> Agregar Partitura</a>
            </div>

            <form method="get" action="@Url.Action("Index", "Home", new { area = "Admin" })">
                <div class="filter-bar">
                    <div class="filter-group-admin">
                        <select name="idFiltroGenero" id="idGenero" class="admin-filter-select">
                            <option value="0" selected="@(Model.IdGeneroSeleccionado == 0)">Todos los géneros</option>
                            @foreach (var option in Model.Generos)
                            {
                                <option value="@option.Id" selected="@(Model.IdGeneroSeleccionado == option.Id)">@option.Nombre</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="submit-btn action-btn" style="padding:5px 10px; cursor:pointer"><i class="fas fa-plus"></i>Aplicar Filtro</button>
                </div>
            </form>

            <div class="admin-table-wrapper">
                <table class="score-admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Compositor</th>
                            <th>Género</th>
                            <th>Dificultad</th>
                            <th>Instrumentación</th>
                            <th class="actions-column">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Partituras)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Titulo</td>
                                <td>@item.Compositor</td>
                                <td>@item.GeneroMusical</td>
                                @{
                                    string claseBadge = "";
                                    switch (item.Dificultad)
                                    {
                                        case "Principiante": claseBadge = "badge"; break;
                                        case "Fácil": claseBadge = "badge-light-medium"; break;
                                        case "Intermedio": claseBadge = "badge-medium"; break;
                                        case "Avanzado": claseBadge = "badge-advanced"; break;
                                        case "Experto": claseBadge = "badge-expert"; break;
                                    }
                                }
                                <td><span class="badge @claseBadge">@item.Dificultad</span></td><!--cambiar diseño badge-->
                                <td>@item.Instrumentacion</td>
                                <td class="actions-column">
                                    @* @Url.Action("Detalles", "Home", new { id = g.Id }) *@

                                    <a href="@Url.Action("Editar", "Home", new { area = "Admin", id = item.Id})" class="action-btn edit-btn"><i class="fas fa-pencil-alt"></i></a>
                                    <a href="@Url.Action("Eliminar", "Home", new { area = "Admin", id = item.Id })" class="action-btn delete-btn"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                        @* <tr>
                            <td>3</td>
                            <td>Hedwig's Theme</td>
                            <td>John Williams</td>
                            <td>Banda Sonora</td>
                            <td><span class="badge badge-light-medium">Fácil-Intermedio</span></td>
                            <td>Orquesta / Piano</td>
                            <td class="actions-column">
                                <button class="action-btn edit-btn"><i class="fas fa-pencil-alt"></i></button>
                                <button class="action-btn delete-btn"><i class="fas fa-trash-alt"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td>4</td>
                            <td>Fuga en Sol menor (BWV 578)</td>
                            <td>Johann Sebastian Bach</td>
                            <td>Clásico</td>
                            <td><span class="badge badge-advanced">Avanzado</span></td>
                            <td>Órgano</td>
                            <td class="actions-column">
                                <button class="action-btn edit-btn"><i class="fas fa-pencil-alt"></i></button>
                                <button class="action-btn delete-btn"><i class="fas fa-trash-alt"></i></button>
                            </td>
                        </tr> *@
                    </tbody>
                </table>
            </div>

        </section>
    </main>

</body>
</html>