@model U5ProgWebPartituras.Areas.Admin.Models.AgregarAdminPartiturasViewMode
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Agregar Partitura";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h2 class="mb-0"><i class="fas fa-plus-circle"></i> Agregar Nueva Partitura</h2>
            </div>
            <div class="card-body">
                <form asp-action="Agregar" asp-controller="Home" asp-area="Admin" method="post" enctype="multipart/form-data">

                    <!-- Resumen de errores generales -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <!-- Columna Izquierda: Datos -->
                        <div class="col-md-6">
                            <h4 class="text-secondary mb-3">Información General</h4>

                            <div class="mb-3">
                                <label asp-for="Titulo" class="form-label fw-bold">Título de la Obra</label>
                                <input asp-for="Titulo" class="form-control" placeholder="Ej. Sonata No. 14" required />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdCompositor" class="form-label fw-bold">Compositor</label>
                                    <select asp-for="IdCompositor" class="form-select" required>
                                        <option value="">-- Seleccionar --</option>
                                        @foreach (var item in Model.CompositoresLista)
                                        {
                                            <option value="@item.Id">@item.Nombre</option>
                                        }
                                    </select>
                                    <span asp-validation-for="IdCompositor" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdGenero" class="form-label fw-bold">Género Musical</label>
                                    <select asp-for="IdGenero" class="form-select" required>
                                        <option value="">-- Seleccionar --</option>
                                        @foreach (var item in Model.GenerosLista)
                                        {
                                            <option value="@item.Id">@item.Nombre</option>
                                        }
                                    </select>
                                    <span asp-validation-for="IdGenero" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Instrumentacion" class="form-label fw-bold">Instrumentación</label>
                                <input asp-for="Instrumentacion" class="form-control" placeholder="Ej. Piano Solo, Cuarteto de Cuerdas..." />
                                <span asp-validation-for="Instrumentacion" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Dificultad" class="form-label fw-bold">Dificultad</label>
                                <select asp-for="Dificultad" class="form-select">
                                    <option value="">-- Seleccionar --</option>
                                    <option value="Principiante">Principiante</option>
                                    <option value="Fácil">Fácil</option>
                                    <option value="Intermedio">Intermedio</option>
                                    <option value="Avanzado">Avanzado</option>
                                    <option value="Experto">Experto</option>
                                </select>
                                <span asp-validation-for="Dificultad" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Columna Derecha: Archivos y Descripción -->
                        <div class="col-md-6">
                            <h4 class="text-secondary mb-3">Archivos y Detalles</h4>

                            <div class="mb-3 p-3 bg-light border rounded">
                                <label asp-for="Pdf" class="form-label fw-bold text-primary">
                                    <i class="fas fa-file-pdf"></i> Archivo Partitura (PDF/Imagen) *
                                </label>
                                <input asp-for="Pdf" type="file" class="form-control" accept=".pdf, .jpg, .jpeg" required />
                                <div class="form-text">Obligatorio. Máx 5MB. Formatos: .pdf, .jpg</div>
                                <span asp-validation-for="Pdf" class="text-danger"></span>
                            </div>

                            <div class="mb-3 p-3 bg-light border rounded">
                                <label asp-for="Audio" class="form-label fw-bold text-success">
                                    <i class="fas fa-music"></i> Audio de Referencia (Opcional)
                                </label>
                                <input asp-for="Audio" type="file" class="form-control" accept=".mp3, .wav" />
                                <div class="form-text">Opcional. Máx 10MB. Formatos: .mp3, .wav</div>
                                <span asp-validation-for="Audio" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label fw-bold">Descripción / Notas</label>
                                <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save"></i> Guardar Partitura
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts necesarios para validación del lado del cliente (opcional pero recomendado) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
</body>
</html>