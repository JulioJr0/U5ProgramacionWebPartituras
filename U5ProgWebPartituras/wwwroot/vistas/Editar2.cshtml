@model U5ProgWebPartituras.Areas.Admin.Models.EditarAdminPartiturasViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Editar Partitura";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h2 class="mb-0"><i class="fas fa-edit"></i> Editar Partitura: @Model.Titulo</h2>
            </div>
            <div class="card-body">
                <form asp-action="Editar" asp-controller="Home" asp-area="Admin" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <!-- Datos Principales -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Titulo" class="form-label fw-bold">Título</label>
                                <input asp-for="Titulo" class="form-control" required />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdCompositor" class="form-label fw-bold">Compositor</label>
                                    <select asp-for="IdCompositor" class="form-select" required>
                                        <option value="">-- Seleccionar --</option>
                                        @foreach (var item in Model.CompositoresLista)
                                        {
                                            <option value="@item.Id">@item.Nombre</option>
                                        }
                                    </select>
                                    <span asp-validation-for="IdCompositor" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdGenero" class="form-label fw-bold">Género</label>
                                    <select asp-for="IdGenero" class="form-select" required>
                                        <option value="">-- Seleccionar --</option>
                                        @foreach (var item in Model.GenerosLista)
                                        {
                                            <option value="@item.Id">@item.Nombre</option>
                                        }
                                    </select>
                                    <span asp-validation-for="IdGenero" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Instrumentacion" class="form-label fw-bold">Instrumentación</label>
                                <input asp-for="Instrumentacion" class="form-control" />
                                <span asp-validation-for="Instrumentacion" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Dificultad" class="form-label fw-bold">Dificultad</label>
                                <select asp-for="Dificultad" class="form-select">
                                    <option value="Principiante">Principiante</option>
                                    <option value="Fácil">Fácil</option>
                                    <option value="Intermedio">Intermedio</option>
                                    <option value="Avanzado">Avanzado</option>
                                    <option value="Experto">Experto</option>
                                </select>
                            </div>
                        </div>

                        <!-- Archivos (Reemplazo) -->
                        <div class="col-md-6">
                            <div class="alert alert-warning">
                                <i class="fas fa-info-circle"></i> <strong>Nota:</strong> Sube archivos solo si deseas reemplazarlos. De lo contrario, déjalos vacíos.
                            </div>

                            <div class="mb-3 p-3 border rounded">
                                <label asp-for="Pdf" class="form-label fw-bold">Reemplazar Partitura (PDF/Img)</label>
                                <input asp-for="Pdf" type="file" data-val="false" class="form-control" accept=".pdf, .jpg, .jpeg" />
                                <span asp-validation-for="Pdf" class="text-danger"></span>
                            </div>

                            <div class="mb-3 p-3 border rounded">
                                <label asp-for="Audio" class="form-label fw-bold">Reemplazar Audio</label>
                                <input asp-for="Audio" type="file" class="form-control" accept=".mp3, .wav" />
                                <span asp-validation-for="Audio" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-info text-white">
                            <i class="fas fa-check"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
</body>
</html>