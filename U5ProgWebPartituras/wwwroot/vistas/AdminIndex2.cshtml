@model U5ProgWebPartituras.Areas.Admin.Models.IndexAdminPartiturasViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Administración de Partituras</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col-8">
                <h2>🎶 Gestión de Partituras</h2>
            </div>
            <div class="col-4 text-end">
                <a href="Admin/Home/Agregar" class="btn btn-success">
                    <i class="fas fa-plus"></i> Agregar Partitura
                </a>
            </div>
        </div>

        <hr>

        <div class="card mb-4 p-3 bg-light">
            <h5 class="card-title">Filtros</h5>
            <form method="get" action="Admin/Home/Index">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <label for="idGenero" class="form-label">Filtrar por Género</label>
                        <select name="idFiltroGenero" id="idGenero" class="form-select">
                            <option value="0" selected="@(Model.IdGeneroSeleccionado == 0)">Todos los Géneros</option>
                            @foreach (var opcion in Model.Generos)
                            {
                                <option value="@opcion.Id" selected="@(Model.IdGeneroSeleccionado == opcion.Id)">@opcion.Nombre</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">Aplicar Filtro</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Compositor</th>
                        <th>Género</th>
                        <th>Dificultad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Partituras)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.Titulo</td>
                            <td>@p.Compositor</td>
                            <td>@p.GeneroMusical</td>
                            <td>@p.Dificultad</td>
                            <td>
                                <a href="/Admin/Home/Editar/@p.Id" class="btn btn-sm btn-info text-white">Editar</a>
                                <a href="/Admin/Home/Eliminar/@p.Id" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
</body>
</html>
